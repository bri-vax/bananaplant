<% content_for :css do
    stylesheet_link_tag 'devise'
end %>

<div class="wrapper">
	<div class="container">
<center>
  <h1>Connexion</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder:"E-Mail", class:"field-input" %>
  </div>

  <div class="field">
    
    <%= f.password_field :password, autocomplete: "off"  , placeholder:"Mot de passe", class:"field-input"%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>


  <div class="actions">
    <button  id="login-button"><i class="material-icons md-64">done</i></button>
  </div>
<% end %>
</center>
